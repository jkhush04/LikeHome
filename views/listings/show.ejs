<% layout("/layouts/boilerplate.ejs") %>

<body>
  <div class="row">
    <h3>Listing Details :</h3>
    <div class="card">
      <div class="col-8">
        <img
          src="<%=listing.image.url%>"
          class="card-img-top show-img"
          alt="listing_img"
        />
      </div>
      <div class="card-body">
        <p class="card-text">
          <%=listing.title%><br />
          <%=listing.description%><br />
          &#8377;<%=listing.price.toLocaleString("en-IN")%><br />
          <%=listing.location%><br />
          <%=listing.country%><br />
        </p>
      </div>
    </div>

    <br />
    <div class="col-8 show-btn">
    <a class="btn btn-dark edit-btn col-2" href="/listings/<%=listing._id%>/edit "
      >Edit</a
    ><br /><br />
    <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
      <button class="btn btn-dark">Delete</button>
    </form>
    </div>
  </div>
</body>
